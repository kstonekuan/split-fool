{
	"name": "@split-fool/api",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/local.ts",
		"build": "tsc",
		"build:aws": "esbuild src/aws-lambda.ts --bundle --platform=node --target=node20 --outfile=dist/lambda.js",
		"deploy:aws": "sam build && sam deploy",
		"typecheck": "tsc --noEmit",
		"format": "biome check . --write",
		"lint": "biome check . --write",
		"dynamodb:start": "docker-compose up -d",
		"dynamodb:stop": "docker-compose down",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:integration": "tsx scripts/test.ts"
	},
	"dependencies": {
		"@aws-sdk/client-dynamodb": "3.830.0",
		"@aws-sdk/lib-dynamodb": "3.830.0",
		"@hono/node-server": "1.14.4",
		"@hono/zod-validator": "^0.7.0",
		"@split-fool/shared": "workspace:*",
		"date-fns": "^4.1.0",
		"electrodb": "^3.4.3",
		"hono": "4.8.1",
		"nanoid": "5.1.5",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.2",
		"@faker-js/faker": "^9.8.0",
		"@types/aws-lambda": "8.10.150",
		"@types/node": "24.0.3",
		"@vitest/ui": "^3.2.4",
		"c8": "^10.1.3",
		"esbuild": "0.25.5",
		"happy-dom": "^18.0.1",
		"tsx": "4.20.3",
		"typescript": "5.8.3",
		"vitest": "^3.2.4"
	}
}
