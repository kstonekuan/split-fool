{
	"name": "@split-fool/web",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"typecheck": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
		"lint": "biome check . --write",
		"format": "biome check . --write",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"build:cf": "vite build --mode production",
		"deploy:cf": "pnpm build:cf && wrangler pages deploy dist --project-name=splitfool"
	},
	"dependencies": {
		"@split-fool/shared": "workspace:*"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.2",
		"@sveltejs/vite-plugin-svelte": "5.1.0",
		"@tsconfig/svelte": "5.0.4",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.20",
		"happy-dom": "^18.0.1",
		"postcss": "^8.4.49",
		"svelte": "5.34.7",
		"svelte-check": "4.2.2",
		"tailwindcss": "^3.4.17",
		"typescript": "5.8.3",
		"vite": "6.3.5",
		"vitest": "^3.2.4"
	}
}
